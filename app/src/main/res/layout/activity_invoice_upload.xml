<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".InvoiceUploadActivity">

    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Touch the icon below to Invoice PDFs"
        android:textColor="@color/blackTextColor"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/ivAttachment"
        android:layout_width="133dp"
        android:layout_height="127dp"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:cropToPadding="true"
        android:src="@drawable/ic_attach_pdf" />

    <TextView
        android:id="@+id/tv_file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivAttachment"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@color/blackTextColor"/>


    <Button
        android:id="@+id/b_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/InvoiceUploadNext"
        android:layout_alignParentStart="true"
        android:background="@drawable/round_btn"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:text="Upload"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/InvoiceUploadNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/round_btn"
        android:gravity="center"
        android:text="Next"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold" />
</RelativeLayout>